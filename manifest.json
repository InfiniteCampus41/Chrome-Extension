{
  "manifest_version": 3,
  "name": "Infinite Campus",
  "version": "1.2",
  "description": "A Chrome Extension That Allows Running Custom CSS And Custom JS On Any Site",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Infinite Campus"
  },
  "options_page": "options.html",
  "icons": {
    "192": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}